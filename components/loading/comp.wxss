/* components/loading/comp.wxss */

.container {
    position: relative;
    width: 60rpx;
    height: 60rpx;
}
.circle {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: #333;
    border-radius: 50%;
    animation: run 1s infinite;
    opacity: 0.5;
}
@keyframes run {
    0% {
        transform: scale(0)
    }
    50% {
        transform: scale(1)
    }
    100%{
        transform: scale(0)
    }
}

.delay {
    animation-delay: -0.5s;
}