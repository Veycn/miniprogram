/* components/nineImg/nineImg.wxss */
.container {
    width: 700rpx;
}
.img-container {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 700rpx;
    height: 700rpx;
    overflow: hidden;
}
.img-container image {
    width: 33%;
    height: 33%;
}
.img-count {
    position: absolute;
    right: 80rpx;
    bottom: 80rpx;
    background: rgba(0, 0, 0, .7);
    color: #fff;  
    font-size: 24rpx;
    padding: 5rpx 10rpx;
}

.text-wrapper {
    font-size: 40rpx;
    padding: 0 30rpx;
    font-weight: 400;
    letter-spacing: 2rpx;
}