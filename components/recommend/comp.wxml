<!--components/recommend/comp.wxml-->
<view class="container">
    <text class="big-title">{{ mId === 0 ? date : mArr[mId] }}</text>
    <text class="title">{{ recommend.title }}</text>
    <image src="{{ recommend.imgSrc }}" mode="widthFix" class="image" hidden="{{ !recommend.imgSrc }}"/>
    <view class="skeleton" hidden="{{ recommend.imgSrc }}">
        <view class="loader"></view>
    </view>
</view>
