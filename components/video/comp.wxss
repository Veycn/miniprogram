/* components/vedio/comp.wxss */
.container {
    width: 700rpx;
}
.video {
    width: 700rpx;
    height: 400rpx;
}

.poster-container {
    position: relative;
    width: 700rpx;
    height: 400rpx;
}
.poster {
    width: 100%;
    height: 100%;
}
.controller {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.5)
}
.play-btn {
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}

.duration {
    font-size: 24rpx;
    color: #fff;
}

.mask {
    position: fixed;
    width: 750rpx;
    height: 1334rpx;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.1)
}